<p id="notice"><%= notice %></p>

<div class="container content">
  <h1>Products</h1>
  <div class="row">

  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4 my-2">
      <div class="card" style="width: 18rem;">
        <% if product.image_url == nil %>
          <%= image_tag("placeholder.jpg", size: '286x180', class: "card-img-top")%>
        <% else %>
          <%= image_tag(product.image_url, size: '286x180', class: "card-img-top")%>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <ul class="list-group list-group-flush mb-2">
            <li class="list-group-item">Colour: <%= product.colour ? product.colour : "Not specified" %></li>
            <li class="list-group-item">$ <%= product.price ? product.price : 0 %></li>
          </ul>
          <%= link_to 'Show', product, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <div class="row">
    <%= link_to 'New Product', new_product_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>


