<p id="notice"><%= notice %></p>

<div class="container content">
  <h1>Products</h1>
  <div class="row">

  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4 my-2">
      <div class="card" style="width: 18rem;">
        <%= image_tag(product.image_url, size: '286x180', class: "card-img-top")%>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <%= link_to 'Show', product, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <div class="row">
    <%= link_to 'New Product', new_product_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>


