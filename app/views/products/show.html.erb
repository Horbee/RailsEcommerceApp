<% provide(:page_title, @product.name) %>
<% provide(:product_active, "active") %>

  
<%= render partial: "shared/notice", locals: {notice: notice} %>

<div class="row">
  <div class="col-md-4 mt-5">
    <%= image_tag(@product.image_url, class: "img-fluid") %>  
  </div>
  <div class="col-md-6">
    <h3 class="card-title"><%= @product.name %></h3>
    <p class="card-text"><%= @product.description %></p>
    <li class="list-group-item">Colour: <%= @product.colour ? @product.colour : "Not specified" %><i class="ml-2 fas fa-palette"></i></li>
    <li class="list-group-item">Price: EUR <%= @product.price ? @product.price : 0 %><i class="ml-2 fas fa-shopping-cart"></i></li>
  </div>
  <div class="col-md-2 box">
    <%= button_to 'Buy now' , {:controller => "orders", :action => "create", :product => @product } , :method=>:post, class: "btn btn-danger btn-block"  %>  
  </div>
</div>

<div class="my-5">Place for comments</div>


<%= @product.highest_rating_comment %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>



