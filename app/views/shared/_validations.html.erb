<% if my_model.errors.any? %>
  <div class="alert alert-danger" id="error_explanation">
    <h2>The form can't be saved because of <%= pluralize(my_model.errors.count, "error") %></h2>
    <ul>
	    <% my_model.errors.full_messages.each do |message| %>
	     	<li><%= message %></li>
	    <% end %>
    </ul>
  </div>
<% end %>