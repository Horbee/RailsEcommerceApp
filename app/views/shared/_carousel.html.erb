<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% i = 0 %>
    <% @featured_products.each do |p| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i == 0 %>"></li>
      <% i+=1 %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @featured_products.each do |product|%>
        <div class="carousel-item<%= " active" if product == @featured_products.first %>">
            <%= image_tag(product.image_url, class: "img-fluid carousel-image") %>
            <div class="carousel-caption d-none d-md-block">
                <h1><%= product.name %></h1>
                <p><%= strip_tags(product.description)  %></p>
                <%= link_to 'Jump to Product', product, class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>