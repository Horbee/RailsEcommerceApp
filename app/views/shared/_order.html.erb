<div class="card my-3">
	<div class="card-header">
		<div class="row">
			<div class="col-sm">
				<p>ORDER PLACED: <br><%= order.created_at.strftime("%d %B, %Y") %></p>
			</div>
			<div class="col-sm">
				<p>TOTAL: <br><%= order.total %></p>
			</div>
			<div class="col-sm">
				<p>DISPATCH TO: <br><%= "#{current_user.last_name}, #{current_user.first_name}" %></p>
			</div>
		</div>
	</div>
  	<div class="row">
	    <div class="col-sm-3 media">
	    	<%= image_tag(order.product.image_url, class: "img-fluid align-self-center")%>
	    </div>
	    <div class="col-sm-9 ">
	    	<div class="p-2">
		     	<h1><%= link_to "Order # #{order.id}", order %></h1>
		    	<%= link_to order.product.name, order.product %>
		      	<p><%= strip_tags(order.product.description) %></p>
		      	<strong>â‚¬ <%= order.product.converted_price %></strong>
		      	<%= link_to 'Delete Order', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mx-2" %>
	    	</div>
	    </div>
	</div>
</div>