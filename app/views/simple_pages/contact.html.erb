<% provide(:page_title, "Contact Page") %>
<% provide(:contact_active, "active") %>

<section class="margin-top-75">
    <div class="text-center">
    	<h1>Contact us</h1>
    	<p>If you wish to send us a message, use the form below.</p>
	</div>

    <%= form_with(url:"/simple_pages/thank_you", method:"POST", local: true) do |form| %>
    	<div class="form-row">
    		<div class="col-sm-12 col-md-4">
    			<%= form.label :name %>
    			<%= form.text_field :name, class:"form-control", placeholder:"Enter your name", minlength: "2", required: true %>
    		</div>
    		<div class="col-sm-12 col-md-4">
    			<%= form.label :email %>
    			<%= form.text_field :email, class:"form-control", placeholder:"Enter your E-Mail address", type:"email", required: true %>
    		</div>
            <div class="col-sm-12 col-md-4">
                <%= form.label :subject %>
                <%= form.text_field :subject, class:"form-control", placeholder:"Enter the Subject", required: true %>
            </div>
    	</div>

		<div class="form-group">
			<%= form.label :message %>
			<%= form.text_area :message, class:"form-control", placeholder:"Enter your Message", rows: 5, minlength: "5", required: true %>
		</div>
    	
    	<%= form.submit "Send Message", class:"btn btn-primary" %>
    <% end %>
</section>