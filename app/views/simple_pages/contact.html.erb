<% provide(:page_title, "Contact Page") %>
<% provide(:contact_active, "active") %>

<section class="margin-top-75">
    <div class="text-center">
    	<h1>Contact us</h1>
    	<p>Would you like to leave a compliment? You can absolutely do it below.</p>
	</div>

    <%= form_with(url:"/simple_pages/thank_you", method:"POST", local: true) do |form| %>
    	<div class="form-row">
    		<div class="col">
    			<%= form.label :name %>
    			<%= form.text_field :name, class:"form-control", placeholder:"Enter your name" %>
    		</div>
    		<div class="col">
    			<%= form.label :email %>
    			<%= form.text_field :email, class:"form-control", placeholder:"Enter your E-Mail address" %>
    		</div>
    	</div>

		<div class="form-group">
			<%= form.label :message %>
			<%= form.text_area :message, class:"form-control", placeholder:"Enter your Message", rows: 5 %>
		</div>
    	
    	<%= form.submit "Send Message", class:"btn btn-primary" %>
    <% end %>
</section>