<div class="margin-top-75">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-6">
                <h1 class="display-4">Featured Product:</h1>
                <div class="card" style="width: 18rem;">
                    <%= image_tag(@featured_product.image_url, size: '286x180', class: "card-img-top")%>
                    <div class="card-body">
                        <h5 class="card-title"><%= @featured_product.name %></h5>
                        <p class="card-text"><%= @featured_product.description %></p>
                        <ul class="list-group list-group-flush mb-2">
                            <li class="list-group-item">Colour: <%= @featured_product.colour ? @featured_product.colour : "Not specified" %></li>
                            <li class="list-group-item">$ <%= @featured_product.price ? @featured_product.price : 0 %></li>
                        </ul>
                        <%= link_to 'Learn More', @featured_product, class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h1 class="content-heading">Welcome to Buy Laptops</h1>
                <h2 class="content-subheading">The best resource of laptops on the planet!</h2>
                <div class="index-button">
                    <%= image_tag('cart.png', size: '40x40')%>
                    <%= link_to 'Enter Site', products_path, class:"btn btn-lg btn-primary" %>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <p>Check out awesome deals for this week!</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
    </div>
</div>